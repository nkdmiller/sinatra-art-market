<div class = "wrapper">
	<h1 class = "centered titled">Create Artwork</h1>
	<br></br>



	<h2 class = "centered">Please fill out the following information</h2>
	<form class = "form-background" action="/artworks" method="POST">
		<br><br>
		 <fieldset>
		    <legend>Enter Artwork Name</legend>

		    <input type="text" placeholder="Name" name="artwork[name]"
		           maxlength="30" required
		           title="Must be no longer than 30 characters." />

		</fieldset>
	  <br></br> 
		 <fieldset>
		    <legend>Enter Photo Location</legend>

		    <input type="text" placeholder="art_photo.jpg" name="artwork[img]"
		           title="Path to image." />

		</fieldset>
	 
	  <br></br>
	 
		<fieldset>
		    <legend>Enter Quantity</legend>

		    <label for="primary">Quantity:</label>
		    <input type="text" placeholder="Number for sale"
		           required name = "artwork[quantity]"
		           title="Enter quantity of this artwork for sale." />

		</fieldset>

	    <br></br>

	    <fieldset>
		    <legend>Enter Price</legend>

		    <label for="primary">Price:</label>
		    <input type="text" placeholder=".50, 10.00, 1,000.00"
		           required name = "artwork[price]"
		           title="Enter price of this artwork." required oninput="check(this)"/>
	        <script language='javascript' type='text/javascript'>
				function check(input)
				{
				  var val = input.value;
				  if (isNaN(val)) 
				  {
					input.setCustomValidity('Must be a valid number.');
				  }
				  else{
			            input.setCustomValidity('');
			        }
				}
			</script>
		</fieldset>
		<br></br>
		   <fieldset>
		    <legend>Description</legend>

		    <textarea name="artwork[description]" rows="10" cols="30"></textarea>

		</fieldset>
		
	    <br></br>
	  <input class="centered" type="submit" value="Submit">
	</form>
</div>