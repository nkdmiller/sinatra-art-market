<h1>Edit Purchase Form</h1>
<br></br>
<h2>Please fill out the following information</h2>
<form action="/transactions/<%=@transaction.id%>" method="POST">
	<input id="hidden" type="hidden" name="_method" value="patch"> 
	<br><br>
	 <fieldset>
	    <legend>Select the number you wish to buy</legend>

	    <select name="transaction[quantity_sold]">
	    	<%i=1%>
	    	<%@artwork.quantity.times do%>
	    		<option value="<%=i%>"><%=i%></option>
	    		<%i+=1%>
	    	<%end%>

	    </select>

	</fieldset>
  <br></br> 
	 <fieldset>
	    <legend>Note to Seller</legend>

	    <textarea name="transaction[note]" rows="10" cols="30"></textarea>

	</fieldset>

  <input type="submit" value="Submit">
</form>