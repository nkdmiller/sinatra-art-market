<div class="row">
	<div class="col-sm-4">
	  	<%="Name: #{@user.name}"%>
	  	<br>
	  	<%="Email: #{@user.email}"%>
	 </div>
	 <br><br>
	<div class="col-sm-4">
	  	<%="Biography: #{@user.bio}"%>
	 </div>	 
	 <br><br>
	 Artworks:
	 <%if !!@creator%>
		<%@creator.artworks.all.each do |art|%>
			<%=art.name%>
		<%end%>
	<%end%>
	 <br><br>
	 <%if !!Helpers.is_logged_in?(session)%>
		 <%if Helpers.current_user(session).id == @user.id%>
		 	<a href=<%="/users/#{@user.id}/edit_profile"%>>Edit Profile</a>
		 	<a href=<%="/users/#{@user.id}/change_password"%>>Change Password</a>
		 <%end%>
	<%end%>

</div>