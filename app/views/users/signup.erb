<h1>Sign Up</h1>
<br></br>
<h2>Please fill out the following information</h2>
<form action="/users" method="POST">
	<br><br>
	 <fieldset>
	    <legend>Enter User Name</legend>

	    <input type="text" placeholder="Name" name="user[name]"
	           maxlength="15" minlength= "3" required
	           title="Must be between 3-15 characters." />

	</fieldset>
  <br></br> 
    <fieldset>
        <legend>Password</legend>

        <input type="password" placeholder="Password" id="password" required name = "user[password]" minlength="6">
        <input type="password" placeholder="Confirm Password" id="confirmed_password" minlength="6" required oninput="check(this)">
        <script language='javascript' type='text/javascript'>
	    	function check(input) {
		        if (input.value != document.getElementById('password').value) {
		            input.setCustomValidity('Password Must be Matching. Please try again.');
		        } else {
		            input.setCustomValidity('');
		        }
	   		 }
		</script>
    </fieldset>
 
  <br></br>
 
	<fieldset>
	    <legend>Enter Email</legend>

	    <label for="primary">Primary address:</label>
	    <input type="email" placeholder="myname@example.com"
	           required name = "user[email]"
	           title="Must be a valid email address" />

	</fieldset>

    <br></br>
    
  <input type="submit" value="Submit">
</form>